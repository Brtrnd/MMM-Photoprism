{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-unused-vars": ["warn"],
        "no-console": ["warn"],
        "no-undef": "error",
        "no-var": "error",
        "prefer-const": "error"
    },
    "globals": {
        "Module": "readonly",
        "document": "readonly",
        "console": "readonly"
    }
} 